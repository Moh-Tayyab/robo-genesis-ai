# BetterAuth Configuration
# Copy this file to .env and fill in the values

# Secret for signing sessions
# Generate with: openssl rand -base64 32
# NEVER commit the actual .env file with real secrets
BETTER_AUTH_SECRET=your-secret-key-here

# Base URL for auth service
# Local development: http://localhost:3001
# Production: https://auth.your-domain.com
BETTER_AUTH_URL=http://localhost:3001

# Optional: Production URL for CORS
# Add your production domain here
# PRODUCTION_URL=https://your-domain.com

# Client-side auth URL (must be prefixed with NEXT_PUBLIC_)
# This is used by frontend applications
NEXT_PUBLIC_AUTH_URL=http://localhost:3001
